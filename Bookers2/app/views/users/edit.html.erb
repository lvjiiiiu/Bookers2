
<div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
  <h2 class="w-100 mt-3">User info</h2>
  <div class="text-danger mb-3">
    <% if @user.errors.any? %>
    <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="w-100">
    <%= form_with model: @user, local:true do |f| %>
    <h6>Name</h6>
      <%= f.text_field :name, class: "w-100" %>
    <label class="mt-3">Image</label>
      <%= f.attachment_field :profile_image, placefolder: "ファイルを選択", class: "d-block" %>
    <h6 class="mt-3">Introduction</h6>
      <%= f.text_area :introduction, class: "w-100"%>
      <%= f.submit "Update User", class: "text-white btn btn-secondary mb-2 d-block" %>
    <% end %>
  </div>
</div>




