<p><%= notice %></p>

<h1>New book</h1>
<% if @book.errors.any? %>
  <p><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</p>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, url: post_books_path, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opnion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |books| %>
  <tr>
    <td><%=attachment_image_tag books.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
    <td><%= link_to books.title, post_book_path(books.id) %></td>
    <td><%= books.body %></td>
  </tr>
  <% end %>
</table>

