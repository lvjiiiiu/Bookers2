<!--edit updateがうまくいったら、validationのエラーメッセージとサクセスメッセージがちゃんとでるか確認する-->
<%= form_with model: @book, url: edit_post_book_path(@book), local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opnion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

